# Profile file runs on login. set environment variables here

export PATH="$PATH:$HOME/.local/bin/"

export EDITOR="nvim"
export TERMINAL="alacrity"

export ZDOTDIR="$HOME/.config/zsh"
export ZDOTDIR="$HOME/.config/zsh"
export GRIM_DEFAULT_DIR="$HOME/HD/pictures/screenshots/"

# For expo and https://reactnative.dev/docs/environment-setup?guide=native&platform=android&os=linux#target-os-1
export ANDROID_HOME=$HOME/Android/Sdk
export PATH=$PATH:$ANDROID_HOME/emulator
export PATH=$PATH:$ANDROID_HOME/platform-tools

# TODO: debugging awesome
# if [[ -z $DISPLAY  ]]; then
# startx
# fi

# https://fdk.codes/how-to-setup-sdkman-on-arch-linux/
# https://stackoverflow.com/questions/76898362/install-sdkman-on-ubuntu-server-through-ansible-playbook
source "$HOME/.sdkman/bin/sdkman-init.sh"
